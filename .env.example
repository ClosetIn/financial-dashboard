# ============================================
# Financial Dashboard - Environment Configuration
# ============================================
# Copy this file to .env and adjust values for your environment
# ============================================

# Application Settings
# ===================
DEBUG=true
PROJECT_NAME="Financial Dashboard"
VERSION="0.1.0"

# Server Configuration
# ====================
HOST=0.0.0.0
PORT=8000
API_PREFIX="/api/v1"

# CORS Settings
# =============
# Format: JSON array of allowed origins
# Examples:
# - Allow all: '["*"]'
# - Specific domains: '["http://localhost:3000", "https://yourapp.com"]'
CORS_ORIGINS='["*"]'

# Database Configuration (Phase 2 - ACTIVE NOW)
# =============================================
# Async connection for application
DATABASE_URL="postgresql+asyncpg://username:password@localhost:5432/financial_dashboard"
# Sync connection for Alembic migrations
SYNC_DATABASE_URL="postgresql://username:password@localhost:5432/financial_dashboard"
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# External APIs
# =============
CBR_API_URL="https://www.cbr-xml-daily.ru/daily_json.js"
MOEX_API_URL="https://iss.moex.com/iss"
API_TIMEOUT=10

# Logging
# =======
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Future Cache Configuration (Phase 3)
# ====================================
# REDIS_URL="redis://localhost:6379/0"
# CACHE_TTL=300  # 5 minutes in seconds

# Future Celery Configuration (Phase 6)
# =====================================
# CELERY_BROKER_URL="redis://localhost:6379/1"
