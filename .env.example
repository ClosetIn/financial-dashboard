# ============================================

# Application Settings
# ===================
DEBUG=true
PROJECT_NAME="Financial Dashboard"
VERSION="0.1.0"

# Server Configuration
# ====================
HOST=0.0.0.0
PORT=8000
API_PREFIX="/api/v1"

# CORS Settings
# =============
# Format: JSON array of allowed origins
# Examples:
# - Allow all: '["*"]'
# - Specific domains: '["http://localhost:3000", "https://yourapp.com"]'
CORS_ORIGINS='["*"]'

# External APIs
# =============
CBR_API_URL="https://www.cbr-xml-daily.ru/daily_json.js"
CBR_REQUEST_TIMEOUT=10

# Logging
# =======
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

